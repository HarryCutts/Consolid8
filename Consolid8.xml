<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Button name="Consolid8_Frame" parent="UIParent" enableMouse="true" movable="true">
		<Size x="32" y="32" />
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="ChatFrameMenuButton" relativePoint="TOP" />
		</Anchors>
		<Scripts>
			<OnLoad>
				Consolid8.OnLoad()
			</OnLoad>
			<OnEvent>
				Consolid8.OnEvent(self, event, ...)
			</OnEvent>
			
			<!-- Button Scripts -->
			<OnEnter>
				Consolid8.ShowTooltip()
			</OnEnter>
			<OnClick>
				Consolid8.ShowMenu()
			</OnClick>
			<OnLeave>
				Consolid8.HideTooltip()
			</OnLeave>
			
			<!-- Movable/Sizable frame scripts -->
			<OnMouseDown>
				if IsShiftKeyDown() then
					self:StartMoving()
				end
			</OnMouseDown>
			<OnMouseWheel>
				if IsShiftKeyDown() then
					local scale = self:GetScale() + (arg1 * 0.05)
					self:SetScale(scale)
					Consolid8_Scale = scale
				end
			</OnMouseWheel>
			<OnMouseUp>
				self:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
		
		<NormalTexture file="Interface\AddOns\Consolid8\Button-Up"/>
		<PushedTexture file="Interface\AddOns\Consolid8\Button-Down"/>
		<DisabledTexture file="Interface\AddOns\Consolid8\Button-Disabled"/>
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
	</Button>
</Ui>